Type: Package
Package: PiC
Title: Pointcloud Interactive Computation
Version: 1.2.7
Authors@R: c(
    person("Roberto", "Ferrara", , "roberto.ferrara@cnr.it", 
           role = c("aut", "cre"), 
           comment = c(ORCID = "0009-0000-3627-6867")),
